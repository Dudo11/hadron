#!/bin/bash
# Copyright Â© 2019 Martin Ueding <dev@martin-ueding.de>

set -e
set -u

red="$(tput setaf 1)"
reset="$(tput sgr0)"

diff_old=$(mktemp)
diff_new=$(mktemp)

cleanup() {
  rm -f "$diff_old"
  rm -f "$diff_new"
}

trap cleanup EXIT

git diff > "$diff_old"
Rscript -e 'devtools::document();'
git diff > "$diff_new"

if ! diff -u "$diff_old" "$diff_new" &> /dev/null; then
  echo "${red}Generating the documentation has changed the tree, add them to the index and try to commit again.${reset}" >&2
  exit 2
fi
